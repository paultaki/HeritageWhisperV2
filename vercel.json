{
  "redirects": [
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "www.heritagewhisper.com" }],
      "destination": "https://heritagewhisper.com/:path*",
      "permanent": true
    }
  ],
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "devCommand": "npm run dev",
  "installCommand": "npm ci --prefer-offline --no-audit --no-fund",
  "framework": "nextjs",
  "functions": {
    "app/api/export/**": {
      "memory": 1024,
      "maxDuration": 60
    },
    "app/api/transcribe-assemblyai/**": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/cron/daily-story-notifications",
      "schedule": "0 9 * * *"
    }
  ]
}
