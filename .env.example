# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database Configuration (PostgreSQL/Neon)
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# OpenAI API Configuration
OPENAI_API_KEY=sk-proj-your-api-key-here

# OpenAI Realtime API (WebRTC for guided interviews)
# Set to 'true' to enable Realtime API (replaces broken Whisper blob-slicing)
# Cost: ~$1.13 per 15-min interview (gpt-realtime-mini)
NEXT_PUBLIC_ENABLE_REALTIME=false

# PDFShift API Configuration (for PDF exports)
# Get your API key at: https://app.pdfshift.io/env/
PDFSHIFT_API_KEY=your-pdfshift-api-key-here

# Session Configuration
SESSION_SECRET=your-random-session-secret-here

# Stripe Configuration (for Payment Processing)
# Get your keys at: https://dashboard.stripe.com/apikeys
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-publishable-key-here
STRIPE_SECRET_KEY=sk_test_your-secret-key-here

# Stripe Premium Price ID (Create in Stripe Dashboard)
# Product: HeritageWhisper Premium
# Price: $79/year (recurring)
# Format: price_xxxxxxxxxxxxxxxxxxxxx
STRIPE_PREMIUM_PRICE_ID=price_your-price-id-here

# Stripe Webhook Secret (for webhook signature verification)
# Get from: https://dashboard.stripe.com/webhooks
# Format: whsec_xxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here

# Site Configuration (Important for OAuth redirects)
NEXT_PUBLIC_SITE_URL=https://www.joblessbyai.com

# Email Configuration (Resend)
RESEND_API_KEY=your-resend-api-key-here
RESEND_FROM_EMAIL=Heritage Whisper <no-reply@updates.heritagewhisper.com>
# For development/testing, use: onboarding@resend.dev

# Development Settings (Optional)
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:3002