# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database Configuration (PostgreSQL/Neon)
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# OpenAI API Configuration
OPENAI_API_KEY=sk-proj-your-api-key-here

# OpenAI Realtime API (WebRTC for guided interviews)
# Set to 'true' to enable Realtime API (replaces broken Whisper blob-slicing)
# Cost: ~$1.13 per 15-min interview (gpt-realtime-mini)
NEXT_PUBLIC_ENABLE_REALTIME=false

# PDFShift API Configuration (for PDF exports)
# Get your API key at: https://app.pdfshift.io/env/
PDFSHIFT_API_KEY=your-pdfshift-api-key-here

# Session Configuration
SESSION_SECRET=your-random-session-secret-here

# Stripe Configuration (Optional)
NEXT_PUBLIC_STRIPE_PUBLIC_KEY=pk_test_your-key-here
STRIPE_SECRET_KEY=sk_test_your-key-here

# Site Configuration (Important for OAuth redirects)
NEXT_PUBLIC_SITE_URL=https://www.joblessbyai.com

# Development Settings (Optional)
NODE_ENV=development
NEXT_PUBLIC_API_URL=http://localhost:3002